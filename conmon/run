#!/bin/sh
NAME="conmon"
RELEASE="1"
VERSION="2.1.6"
SOURCES="https://github.com/containers/conmon/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="340453f7aac43e6a1f9a5efe31f24471f8a7a997a849ad6d1ff3fb530a9e2874  v2.1.6.tar.gz"
DESCRIPTION="An OCI container runtime monitor"

build() {
    make -j$(nproc)
}

install() {
    make install
}
